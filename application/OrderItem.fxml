<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="vBox" alignment="CENTER_LEFT" prefHeight="88.0" prefWidth="870.0" spacing="80.0" style="-fx-border-color: black; -fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.OrderDataController">
   <children>
      <Label fx:id="foodLabel" prefHeight="72.0" prefWidth="364.0" style="-fx-font-weight: bold;" text="foodLabel" wrapText="true">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label fx:id="sizeLabel" alignment="CENTER" prefHeight="58.0" prefWidth="371.0" style="-fx-font-weight: bold;" text="sizeLabel" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Label fx:id="qtyLabel" alignment="CENTER" prefHeight="58.0" prefWidth="233.0" style="-fx-font-weight: bold;" text="qtyLabel">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label fx:id="priceLabel" alignment="CENTER" prefHeight="58.0" prefWidth="259.0" style="-fx-font-weight: bold;" text="priceLabel">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Button fx:id="deleteBtn" mnemonicParsing="false" prefHeight="27.0" prefWidth="31.0" style="-fx-background-color: white;" wrapText="true">
         <graphic>
            <ImageView fitHeight="19.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../pictures/bin.png" />
               </image>
            </ImageView>
         </graphic>
         <HBox.margin>
            <Insets left="-50.0" />
         </HBox.margin>
      </Button>
   </children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</HBox>
