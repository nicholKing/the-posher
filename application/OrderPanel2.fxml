<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="foodBox" alignment="CENTER" prefHeight="277.0" prefWidth="146.0" spacing="4.0" style="-fx-border-color: black; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.OrderPanel2Controller">
   <children>
      <ImageView fx:id="img" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true">
         <image>
            <Image url="@../pictures/fast-food.png" />
         </image>
      </ImageView>
      <Label fx:id="priceLabel" prefHeight="7.0" prefWidth="130.0" style="-fx-font-weight: bold;" stylesheets="@general.css" text="Price">
         <font>
            <Font size="15.0" />
         </font></Label>
      <Label fx:id="foodLabel" alignment="CENTER" prefHeight="100.0" prefWidth="126.0" style="-fx-font-weight: bold;" stylesheets="@general.css" text="Label" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="selectBtn" mnemonicParsing="false" prefHeight="63.0" prefWidth="124.0" style="-fx-text-fill: #561C24; -fx-font-weight: bold;" styleClass="select-button" stylesheets="@general.css" text="SELECT" />
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
